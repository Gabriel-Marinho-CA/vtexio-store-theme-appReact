    "rich-text#logo-image": {
        "props": {
          "text":"![logo](assets/imgs/logo.png)",
          "blockClass":"wrapper-logo"
        }
    },

     "rich-text#services-header-left": {
         "props": {
             "text":"![Atendimento](assets/imgs/atendimento-ico.png)",
             "blockClass":"wrapper-services-header-left"
         }
     },
     "rich-text#services-header-right": {
         "props": {
             "text":"Servi√ßos e \n**Atendimento**",
             "blockClass":"wrapper-services-header-right"
         }
     },
     "minicart.v2":{
      "props": {
         "horizontalAlign":"right",
         "blockClass":"wrap-header-cart"
      }
     }
    
}